<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DnDPartyManagerMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DnDPartyManagerMobile"
    xmlns:pages="clr-namespace:DnDPartyManagerMobile.V"
    xmlns:userControls="clr-namespace:DnDPartyManagerMobile.V.UserControls"
    xmlns:views="clr-namespace:DnDPartyManagerMobile.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="DnDPartyManagerMobile">

    <ShellContent 
        Title="Персонажи" 
        ContentTemplate="{DataTemplate views:CharacterPage}" 
        Route="characters" />
    
    <ShellContent 
        Title="Враги" 
        ContentTemplate="{DataTemplate pages:EnemyPage}" 
        Route="enemies" />
    
    <ShellContent 
        Title="Подключение" 
        ContentTemplate="{DataTemplate pages:WebScoketView}" 
        Route="webscoket" />
</Shell>
